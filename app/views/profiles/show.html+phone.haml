- if user_signed_in?
  - if @profile.user == current_user
    %p#official-m
      = link_to "Add your Location & All other Games related information from this link:", edit_profile_path(@profile)
            
    .form-style-4-white
      #posts_mobile
        .form-style-user-m
          %p#official-m
            Name: #{@profile.line2}
          %p#official-m
            Profile Picture:
            = image_tag(@profile.user.image.url(:small), class: "img-circular")
        .form-style-upload-profile-m
          = simple_form_for @profile.user do |f|
            %h1= f.error_notification
            .form-inputs
              %h1= f.input :image, label: "Change Profile Picture from here:", :input_html => {class: 'login3-m'}
              = submit_tag "Change Now", name: nil, class: "button-m4"
              
      %p#official-m Gender: #{@profile.line3}
      %p#official-m Location: #{@profile.line11}
      %p#official-m Games You Play: #{@profile.line12}
      %p#official-m Your In-Game Names & ID Numbers: #{@profile.line13}
      %p#official-m Games Statistics: #{@profile.line14}
      %p#official-m Other Social Media details: #{@profile.line15}

  - else    
    .form-style-user-m
      %p#official-m Name: #{@profile.line2}
      %p#official-m
        Profile Picture:
        = image_tag(@profile.user.image.url(:small), class: "img-circular")
    %p#official-m Gender: #{@profile.line3}
    %p#official-m Location: #{@profile.line11}
    %p#official-m Games Playing: #{@profile.line12}
    %p#official-m In-Game Names & ID Numbers: #{@profile.line13}
    %p#official-m Games Statistics: #{@profile.line14}
    %p#official-m Other Social Media details: #{@profile.line15} 
    
    .form-style-send-post-m
      = simple_form_for([@profile, @profile.posts.build]) do |f|
        = f.error_notification
        %h1= f.input :line1, label: "Send Message to Start Conversation:", placeholder: "Write here & Click on Send button to Send Message.", :input_html => {class: 'login5-m'}
        = submit_tag "Send Message", class: 'button-m3'  

- else
  %p#official-m Please SignUp or Login to view This User's Profile. You're not allowed to see it without Sign In.
